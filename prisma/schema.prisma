generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum UserRole {
  USER
  ADMIN
}

model User {
  externalID String   @id @default(uuid())
  name       String
  username   String   @unique
  email      String   @unique
  password   String
  role       UserRole @default(USER)
  deleted    Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  Board      Board[]
  Task       Task[]
  Stage      Stage[]

  @@index([username, email])
}

model Board {
  externalID     String   @id @default(uuid())
  title          String
  description    String?
  createdBy      User     @relation(fields: [userExternalID], references: [externalID], onDelete: Cascade, onUpdate: Cascade)
  userExternalID String
  deleted        Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  Stage          Stage[]

  @@index([userExternalID])
}

model Stage {
  externalID      String   @id @default(uuid())
  title           String
  description     String?
  board           Board    @relation(fields: [boardExternalID], references: [externalID], onDelete: Cascade, onUpdate: Cascade)
  boardExternalID String
  createdBy       User     @relation(fields: [userExternalID], references: [externalID])
  userExternalID  String
  deleted         Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  Task            Task[]

  @@index([boardExternalID])
  @@index([userExternalID])
}

model Task {
  externalID      String   @id @default(uuid())
  title           String
  description     String?
  priority        Int      @default(0)
  dueDate         DateTime
  stage           Stage    @relation(fields: [stageExternalID], references: [externalID], onDelete: Cascade, onUpdate: Cascade)
  stageExternalID String
  createdBy       User     @relation(fields: [userExternalID], references: [externalID], onDelete: Cascade, onUpdate: Cascade)
  userExternalID  String
  deleted         Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([stageExternalID])
  @@index([userExternalID])
}
